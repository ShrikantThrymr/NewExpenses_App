<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/d10"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="@dimen/d10">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/emp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="ShriKant Tripathi"
                    android:textColor="@color/input_register_bg"
                    android:textSize="@dimen/s15" />

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/trip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cab"
                    android:textColor="@color/input_register_bg" />

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/trip_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20-7-2017"
                    android:textColor="@color/input_register_bg" />

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/trip_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="$500"
                    android:textColor="@color/input_register_bg"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout">

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/emp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emp-Id 139"
                    android:textColor="@color/input_register_hint"
                    android:textSize="@dimen/s12" />

                <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Pending"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/s12" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>