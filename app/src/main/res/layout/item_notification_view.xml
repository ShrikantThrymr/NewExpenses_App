<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d10"
        android:padding="@dimen/d15"
        android:background="@drawable/edit_text_border"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                android:id="@+id/notificastion_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:text="Cab payment" />

            <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                android:id="@+id/notification_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="01-10-22" />

            <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
                android:id="@+id/notification_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/green"
                android:text="Approve" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
