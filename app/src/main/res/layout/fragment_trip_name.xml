<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/d10"
        android:layout_height="wrap_content">
        <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
            android:id="@+id/trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tripname"
            android:textColor="@color/grey" />
        <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
            android:id="@+id/dot_line"
            android:layout_toRightOf="@+id/trip_name"
            android:layout_toLeftOf="@+id/trip_date"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/d3"
            android:layout_marginLeft="@dimen/d3"
            android:layout_height="wrap_content"
            android:background="@drawable/dottet_line"/>
        <com.example.thrymr.newexpensesapp.Views.CustomFontTextView
            android:id="@+id/trip_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_date"
            android:textColor="@color/grey" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rev_name_of_expenses"
        android:layout_below="@+id/main_rl"
        android:layout_margin="@dimen/d10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
